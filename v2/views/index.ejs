<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>PodLuck</h1>
        <p>View our hand-picked podcast recommendations</p>
        <p>
        <a class="btn btn-primary btn-lg" href="/podcasts/new">Add New Podcast!</a>
        </p>
        </div>
    </header>
   
   <div class="row">
       <div class="col-lg-12">
           <h3>Our Most Popular Podcasts</h3>
       </div>
   </div>
   
   
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% podcasts.forEach(function(podcast){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= podcast.image %>">
                    <div class="caption">
                        <h4><%= podcast.name %></h4>
                    </div>
                    <p>
                        <a href="/podcasts/<%= podcast._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include partials/footer %>